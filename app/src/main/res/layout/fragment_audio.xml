<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93BF60"
    android:backgroundTint="#93C75A"
    tools:context=".AudioFragment">

    <Button
        android:id="@+id/record_voice_button"
        android:layout_width="182dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:backgroundTint="#148518"
        android:text="записать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play_voice_button"
        android:layout_width="182dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:backgroundTint="#148518"
        android:text="воспроизвести"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_voice_button" />

</androidx.constraintlayout.widget.ConstraintLayout>